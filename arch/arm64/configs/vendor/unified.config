# Unified configuration for ginkgo/willow and laurel_sprout
# All device-specific drivers are enabled; mi_detect handles runtime detection

# Platform
CONFIG_MACH_XIAOMI_C3J=y
CONFIG_MACH_XIAOMI_F9S=y

# Device detection
CONFIG_MI_DETECT=y
CONFIG_MI_DETECT_SYSFS=y

# Backlight - ginkgo specific
CONFIG_BACKLIGHT_KTD3136=y

# Fingerprint - enable all variants
CONFIG_INPUT_FINGERPRINT=y
CONFIG_FINGERPRINT_FPC1020=y
CONFIG_FINGERPRINT_GF3208=y
CONFIG_FINGERPRINT_GOODIX_FOD=y

# Touchscreen - enable all variants
CONFIG_TOUCHSCREEN_NT36xxx_HOSTDL_SPI_C3J=y
CONFIG_TOUCHSCREEN_FTS_C3J=y
CONFIG_TOUCHSCREEN_XIAOMI_C3J=y
CONFIG_TOUCHSCREEN_GOODIX_F9S=y
CONFIG_TOUCHSCREEN_FTS_F9S=y
CONFIG_TOUCHSCREEN_TID_SUPPORT=y
CONFIG_TOUCHSCREEN_TID_OPENSHORT_TEST=y
CONFIG_TOUCHSCREEN_TID_OPENSHORT_TEST_STORE_RESULT=y

# NFC - enabled for willow variant
CONFIG_NFC_NQ=y

# GPIO Regulator - laurel specific
CONFIG_REGULATOR_GPIO=y

# Thermals - ginkgo specific
CONFIG_THERMAL_SWITCH=y
